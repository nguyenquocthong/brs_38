<div class="row div-title">
  <div class="col-md-3 div-user">
    <h3 class="col-md-offset-6"><%= t "review.controller.user" %></h3>
  </div>
  <div class="col-md-9">
    <h3 class="col-md-offset-6"><%= t "review.controller.review" %></h3>
  </div>
</div>

<% @reviews.each do |review| %>
  <div class="row review-row">
    <div class="col-md-3 avatar-row">
      <%= link_to gravatar_for(review.user), user_path(review.user) %>
      <%= link_to review.user.name, user_path(review.user),
        class: "btn btn-link avartar" %>
    </div>
    <div class="col-md-9 div-review">
      <strong>
        <%= t "review.controller.rate" %>
        <% (Settings.one..review.number_rate_of_user).each do %>
          <%= image_tag Settings.url_star_full,
            alt: t("review.controller.alt_logo") %>
        <% end %>

        <% if review.number_rate_of_user < Settings.max_rate %>
          <% (Settings.one..(Settings.max_rate - review.number_rate_of_user)).each do %>
             <%= image_tag Settings.url_star_empty,
               alt: t("review.controller.alt_logo") %>
          <% end %>
        <% end %>
      </strong>
      <strong>
        <p><%= t "review.controller.content_review" %></p>
      </strong>

      <div class="content-review">
        <% if review.content.size >= Settings.max_char %>
          <%= review.content[Settings.zezo..Settings.max_char] %>
          <%= link_to t("review.controller.continue"),
            book_review_rate_path(@book, review),
            class: "btn btn-link" %>
        <% else %>
          <p>
            <%= review.content %>
          </p>
        <% end %>
      </div>

      <% if logged_in? %>
        <%= link_to t("review.controller.like"), "#", class: "btn btn-link" %>
        <% if review.user == current_user %>
          <%= link_to t("review.controller.edit"),
            edit_book_review_rate_path(review.book, review),
            class: "btn btn-link" %>
          <%= link_to t("review.controller.delete"),
            book_review_rate_path(review.book, review), method: :delete,
            data: {confirm: t("review.controller.data_confirm")},
            class: "btn btn-link" %>
        <% end %>
      <% end %>
    </div>
  </div>
<% end %>
<div class="col-md-offset-4">
  <%= will_paginate @reviews %>
</div>
