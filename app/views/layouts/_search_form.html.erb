<div class="search_form">
  <%= form_tag books_path, method: :get do  %>
    <div class="col-md-4">
      <%= text_field_tag :search, params[:search],
        placeholder: t("search.place_search"),
        class: "form-control" %>
    </div>
    <div class="col-md-1">
      <%= submit_tag t("search.search"), name: nil, class: "btn btn-success" %>
    </div>
  <% end %>
</div>
