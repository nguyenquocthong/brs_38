<header class="navbar navbar-default navbar-fixed-top" >
  <div class="container">
    <%= link_to t("layout.header.logo"), "/pages/home", id: "logo" %>
    <nav>
      <ul class="nav navbar-nav navbar-right">
        <li><%= link_to t("layout.header.help"), "/pages/help" %></li>
        <li><%= link_to t("layout.header.about"), "/pages/about" %></li>
        <% if logged_in? %>
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
              <%= t "sessions.account" %> <b class="caret"></b>
            </a>
            <ul class="dropdown-menu">
              <li><%= link_to t("sessions.profile"), current_user %></li>
              <li class="divider"></li>
              <li>
                <%= link_to t("sessions.logout"), logout_path,
                  method: :delete %>
              </li>
            </ul>
          </li>
        <% else %>
          <li><%= link_to t("sessions.login"), login_path %></li>
        <% end %>
      </ul>
    </nav>
  </div>
</header>
