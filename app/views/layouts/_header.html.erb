<header class="navbar navbar-inverse navbar-fixed-top" >
  <div class="container">
    <%= link_to t("layout.header.logo"), "/pages/home", id: "logo" %>
    <nav>
      <ul class="nav navbar-nav navbar-right">
        <% if logged_in? %>
          <% if current_user.is_admin? %>
            <li><%= link_to t("layout.header.users"), admin_users_path %></li>
            <li><%= link_to t("layout.header.categories"), 
              admin_categories_path %></li>
          <% else %>
            <li><%= link_to t("layout.header.link_categories"),
              categories_path %></li>
          <% end %>
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
              <%= t "layout.account" %> <b class="caret"></b>
            </a>
            <ul class="dropdown-menu">
              <li><%= link_to t("layout.profile"), current_user %></li>
              <li><%= link_to t("layout.setting"),
                edit_user_path(current_user) %></li>
              <li class="divider"></li>
              <li>
                <%= link_to t("layout.logout"), logout_path,
                  method: :delete %>
              </li>
            </ul>
          </li>
        <% else %>
          <li><%= link_to t("layout.login"), login_path %></li>
        <% end %>
      </ul>
    </nav>
  </div>
</header>
