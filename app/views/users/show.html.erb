<% provide :title, @user.name %>
<div class="row">
  <aside class="col-md-3">
    <section class="user_info">
      <h1>
        <%= gravatar_for @user %>
        <%= @user.name %>
      </h1>
    <div class="row col-md-6 div-margin-top">
      <%= render "follow_form" if logged_in? %>
    </div>
    </section>
    <section class="stats">
      <%= render "shared/stats" %>
    </section>
  </aside>
  <div class="col-md-8">
    <%= render "history" if current_user.current_user?(@user) %>
  </div>
</div>
