<% provide :title, t("views.admin.requests.index.action") %>

<h1><%= t "views.admin.requests.index.action" %></h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3"> 
    <%= form_for [:admin, @request] do |f| %>
      <%= f.label :status %>
      <%= f.select :status, options_for_select(@request_statuses),
        class: "form-control" %><br>
      <%= f.submit t("views.requests.edit.submit"), class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
