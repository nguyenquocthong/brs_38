<% provide :title, t("views.admin.category.index.titles") %>
<h1><%= t "views.admin.category.index.dashboard" %></h1>

<%= link_to t("views.admin.category.index.new_button"),
  new_admin_category_path, class: "btn btn-info" %>

<table class="table table-hover">
  <tr>
    <th><%= t "views.admin.category.index.id" %></th>
    <th><%= t "views.admin.category.index.title" %></th>
    <th><%= t "views.admin.category.index.admin_function" %></th>
  </tr>
  <% @categories.each do |category| %>
    <tr>
      <td> <%= category.id %> </td>
      <td>
        <%= link_to category.category_name,
          admin_category_books_path(category) %> </td>
      <td>
        <span>
          <%= link_to t("views.admin.category.index.edit_button"),
            edit_admin_category_url(category), class:"btn btn-info" %>
          <%= link_to t("views.admin.category.index.delete_button"),
            admin_category_url(category), method: :delete,
            data: {confirm: t("views.admin.category.index.delete_confirm")},
            class:"btn btn-danger" %>
        </span>
      </td>
    </tr>
  <% end %>
</table>

<%= will_paginate %>
