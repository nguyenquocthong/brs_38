<% comments.each do |comment| %>
  <div class="row div-comment">
    <%= gravatar_for comment.user, size: Settings.size_avatar %>
    <strong>
      <i>
        <%= comment.user.name %>
        <%= t "review.comment.say" %>
      </i>
    </strong>
    <div class="col-md-offset-1">
      <%= comment.content %>
    </div>
    <div class="row col-md-offset-1">
      <h5>
        <i>
          <%= time_ago_in_words comment.created_at %>
          <%= t "activity.ago" %>
        </i>
      </h5>
    </div>

    <% if logged_in? %>
      <% if current_user.current_user? comment.user %>
        <div>
          <%= link_to t("review.controller.edit"),
            edit_review_rate_comment_path(comment.review_rate, comment),
            remote: true %>
          <%= link_to t("review.controller.delete"),
            review_rate_comment_path(comment.review_rate, comment),
            method: :delete,
            data: {confirm: t("review.comment.data_confirm")}, remote: true %>
        </div>
      <% end %>
    <% end %>
  </div>
<% end %>
